<Label>
    color: (0,0,0)

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height


        Label: 
            text: "Select Pizza Toppings"
            font_size: 32

        GridLayout:
            cols: 2
            
            Label: 
                text: "Pepperoni"
                font_sze: 20
            CheckBox: 
                group: "topping_group"        # 1(a)
                on_active: root.checkbox_click(self, self.active, "Pepperoni")

            Label: 
                text: "Cheese"
                font_sze: 20
            CheckBox: 
                group: "topping_group"        # 1(b)
                on_active: root.checkbox_click(self, self.active, "Cheese")

            Label: 
                text: "Mushroom"
                font_sze: 20
            CheckBox: 
                group: "topping_group"    # 1(c)
                on_active: root.checkbox_click(self, self.active, "Mushroom")

        Label: 
            id: output_label
            text: "False"


# 1
# RadioButton 
# Radio buttons are buttons where there are several options to choose from but you can only select one
# (if you select one radio button and click another radio button, the first radio button will be deselected)
#
# You create a radio button by putting checkboxes in the same group