<MyLayout>
    id: my_widget_example
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id: word_label
            text_size: self.size
            halign: "center"    # horizontal align
            valign: "middle"    # vertical align 
            text: "Enter A Word"
            font_size: 32


        TextInput:
            id: word_input
            multiline: False
            size_hint: (1, 0.5)

        Button:
            size_hint: (1, 0.5)
            font_size: 32
            text: "Submit"
            on_press: root.press()

